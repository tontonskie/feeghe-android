<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/layoutFaceBox"
  android:background="@drawable/per_face">

  <TextView
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtViewFaceUsage"
    android:textColor="@color/perFaceUsage"
    android:background="@drawable/per_face_usage"
    android:text="2000"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:textSize="10dp"
    android:textStyle="bold"/>

  <ImageView
    android:id="@+id/imgViewFace"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:scaleType="fitCenter"
    android:gravity="center_horizontal"
    android:layout_centerVertical="true"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"/>

  <TextView
    android:scrollHorizontally="true"
    android:ellipsize="end"
    android:maxLines="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtViewFaceTitle"
    android:textSize="10dp"
    android:textStyle="bold"
    android:background="@drawable/per_face_title"
    android:textColor="@color/perFaceTitle"
    android:layout_alignParentBottom="true"
    android:gravity="center"/>

</RelativeLayout>
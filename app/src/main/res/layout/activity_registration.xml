<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#ff304888">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Feeghe"
        android:id="@+id/txtViewRegistrationTitle"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="40dp"
        android:paddingTop="100dp"
        android:nestedScrollingEnabled="false"
        android:autoText="false"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Feeghe will send SMS message \nto verify your phone number. \nCarrier SMS charges may apply."
        android:id="@+id/txtViewRegistrationSub"
        android:layout_below="@+id/txtViewRegistrationTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:maxLines="5"
        android:gravity="center"
        android:autoText="false"
        android:textColor="#ffffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtPhoneNumber"
        android:layout_below="@+id/txtViewRegistrationSub"
        android:layout_alignLeft="@+id/txtViewRegistrationSub"
        android:layout_alignStart="@+id/txtViewRegistrationSub"
        android:layout_marginTop="56dp"
        android:background="#ffffffff"
        android:layout_alignRight="@+id/txtViewRegistrationSub"
        android:layout_alignEnd="@+id/txtViewRegistrationSub"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/btnRegister"
        android:layout_marginTop="41dp"
        android:textSize="20dp"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:layout_below="@+id/txtPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"/>

</RelativeLayout>

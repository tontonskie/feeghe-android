<ViewFlipper
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/viewSwitcherRegister"
  xmlns:android="http://schemas.android.com/apk/res/android">


  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#31353e"
    android:id="@+id/layoutRegister">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Feeghe"
      android:id="@+id/txtRegisterTitle"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="105dp"
      android:textColor="#ffffff"
      android:textSize="50dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Feeghe will send an SMS message to verify your phone number. Carrier SMS charges may apply."
      android:id="@+id/txtRegisterSubtitle"
      android:layout_marginTop="52dp"
      android:layout_below="@+id/txtRegisterTitle"
      android:textColor="#ffffff"
      android:textSize="20dp"
      android:gravity="center"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"/>

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:inputType="number"
      android:ems="10"
      android:id="@+id/editTxtPhoneNumber"
      android:layout_marginTop="59dp"
      android:background="#ffffff"
      android:layout_below="@+id/txtRegisterSubtitle"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginRight="20dp"
      android:hint="09258801741"/>

    <Spinner
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/spinCountryCodes"
      android:layout_alignBottom="@+id/editTxtPhoneNumber"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/editTxtPhoneNumber"
      android:layout_toStartOf="@+id/editTxtPhoneNumber"
      android:layout_marginLeft="20dp"
      android:layout_alignTop="@+id/editTxtPhoneNumber"
      />

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sign Up"
      android:id="@+id/btnRegister"
      android:layout_below="@+id/editTxtPhoneNumber"
      android:layout_marginTop="35dp"
      android:layout_alignRight="@+id/txtRegisterTitle"
      android:layout_alignEnd="@+id/txtRegisterTitle"
      android:layout_alignLeft="@+id/txtRegisterTitle"
      android:layout_alignStart="@+id/txtRegisterTitle"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Small Text"
      android:id="@+id/txtRegisterError"
      android:layout_below="@+id/txtRegisterSubtitle"
      android:layout_alignRight="@+id/btnRegister"
      android:layout_alignEnd="@+id/btnRegister"
      android:layout_alignLeft="@+id/btnRegister"
      android:layout_alignStart="@+id/btnRegister"
      android:layout_marginTop="20dp"
      android:visibility="gone"
      android:textColor="#ffff373b"/>

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#31353e"
    android:id="@+id/layoutVerify">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Feeghe"
      android:id="@+id/txtVerifyTitle"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="105dp"
      android:textColor="#ffffff"
      android:textSize="50dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Feeghe will send an SMS message to verify your phone number. Carrier SMS charges may apply."
      android:id="@+id/txtVerifySubtitle"
      android:layout_marginTop="52dp"
      android:layout_below="@+id/txtVerifyTitle"
      android:textColor="#ffffff"
      android:textSize="20dp"
      android:gravity="center"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"/>

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:ems="10"
      android:id="@+id/editTxtVerificationCode"
      android:layout_marginTop="59dp"
      android:background="#ffffff"
      android:layout_below="@+id/txtVerifySubtitle"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginRight="20dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="20dp"
      android:hint="Verification Code"
      android:inputType="text"/>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Verify"
      android:id="@+id/btnVerify"
      android:layout_below="@+id/editTxtVerificationCode"
      android:layout_marginTop="35dp"
      android:layout_alignRight="@+id/txtVerifyTitle"
      android:layout_alignEnd="@+id/txtVerifyTitle"
      android:layout_alignLeft="@+id/txtVerifyTitle"
      android:layout_alignStart="@+id/txtVerifyTitle"/>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cancel"
      android:id="@+id/btnCancelVerification"
      android:layout_below="@+id/btnVerify"
      android:layout_alignRight="@+id/btnVerify"
      android:layout_alignEnd="@+id/btnVerify"
      android:layout_alignLeft="@+id/btnVerify"
      android:layout_alignStart="@+id/btnVerify"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Small Text"
      android:id="@+id/txtVerificationError"
      android:layout_below="@+id/txtVerifySubtitle"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"
      android:visibility="gone"
      android:textColor="#ffff373b"/>

  </RelativeLayout>

</ViewFlipper>
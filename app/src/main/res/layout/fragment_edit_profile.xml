<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:weightSum="10">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:layout_gravity="center">

    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Uploading..."
        android:id="@+id/txtViewEditProfileUploading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewEditProfilePic"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"/>

    </RelativeLayout>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.25"
    android:weightSum="4">

    <TextView
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="First Name"
      android:paddingLeft="20dp"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:id="@+id/txtViewEditProfileFirstName"/>

    <EditText
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:inputType="textPersonName"
      android:hint="ex. John"
      android:background="@android:color/transparent"
      android:ems="10"
      android:id="@+id/editTxtEditProfileFirstName"/>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.25"
    android:weightSum="4">

    <TextView
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Last Name"
      android:paddingLeft="20dp"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:id="@+id/txtViewEditProfileLastName"/>

    <EditText
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:inputType="textPersonName"
      android:hint="ex. Doe"
      android:ems="10"
      android:background="@android:color/transparent"
      android:id="@+id/editTxtEditProfileLastName"/>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.25"
    android:weightSum="4">

    <TextView
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Phone Number"
      android:paddingLeft="20dp"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:id="@+id/txtViewEditProfilePhoneNumber"/>

    <EditText
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:inputType="textPhonetic"
      android:ems="10"
      android:enabled="false"
      android:editable="false"
      android:background="@android:color/transparent"
      android:id="@+id/editTxtEditProfilePhoneNumber"/>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.25"
    android:weightSum="4">

    <TextView
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Email"
      android:paddingLeft="20dp"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:id="@+id/txtViewEditProfileEmail"/>

    <EditText
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_height="match_parent"
      android:hint="ex. test@gmail.com"
      android:inputType="textEmailAddress"
      android:ems="10"
      android:background="@android:color/transparent"
      android:id="@+id/editTxtEditProfileEmail"/>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">

    <Button
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="Save Changes"
      android:id="@+id/btnEditProfileSave"
      android:gravity="center"/>

  </LinearLayout>

</LinearLayout>
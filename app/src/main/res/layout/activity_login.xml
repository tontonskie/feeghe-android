<ViewFlipper
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/viewSwitcherLogin"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="#ff304888">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Feeghe"
    android:id="@+id/txtViewLoginTitle"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="40dp"
    android:paddingTop="100dp"
    android:nestedScrollingEnabled="false"
    android:autoText="false"
    android:textColor="#ffffffff"/>

  <EditText
    android:layout_width="wrap_content"
    android:layout_height="41dp"
    android:inputType="phone"
    android:ems="10"
    android:id="@+id/txtLoginPhoneNumber"
    android:layout_marginTop="43dp"
    android:background="#ffffffff"
    android:layout_below="@+id/txtViewLoginTitle"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:hint="Phone Number ex. 639258801740"/>

  <EditText
    android:layout_width="wrap_content"
    android:layout_height="41dp"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/txtLoginPassword"
    android:background="#ffffffff"
    android:hint="Password"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/txtLoginPhoneNumber"
    android:layout_alignEnd="@+id/txtLoginPhoneNumber"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:id="@+id/btnLogin"
    android:textSize="20dp"
    android:layout_marginTop="41dp"
    android:layout_below="@+id/txtLoginPassword"
    android:layout_alignLeft="@+id/txtViewLoginTitle"
    android:layout_alignStart="@+id/txtViewLoginTitle"
    android:layout_alignRight="@+id/txtViewLoginTitle"
    android:layout_alignEnd="@+id/txtViewLoginTitle"
    android:clickable="true"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Register"
    android:textSize="20dp"
    android:id="@+id/btnSwitchRegister"
    android:layout_below="@+id/btnLogin"
    android:layout_alignLeft="@+id/btnLogin"
    android:layout_alignStart="@+id/btnLogin"
    android:layout_alignRight="@+id/btnLogin"
    android:layout_alignEnd="@+id/btnLogin"
    android:clickable="true"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Invalid number and password"
    android:id="@+id/txtViewLoginError"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/txtLoginPhoneNumber"
    android:layout_alignEnd="@+id/txtLoginPhoneNumber"
    android:layout_below="@+id/txtViewLoginTitle"
    android:paddingTop="10dp"
    android:textColor="#ffa94442"
    android:gravity="center"
    android:visibility="gone"/>


  </RelativeLayout>

  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="#ff304888">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Feeghe"
      android:id="@+id/txtViewRegistrationTitle"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="40dp"
      android:paddingTop="100dp"
      android:nestedScrollingEnabled="false"
      android:autoText="false"
      android:textColor="#ffffffff"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Feeghe will send SMS message \nto verify your phone number. \nCarrier SMS charges may apply."
      android:id="@+id/txtViewRegistrationSub"
      android:layout_below="@+id/txtViewRegistrationTitle"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="36dp"
      android:maxLines="5"
      android:hint="Phone Number ex. 639258801740"
      android:gravity="center"
      android:autoText="false"
      android:textColor="#ffffffff"/>

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:inputType="phone"
      android:ems="10"
      android:id="@+id/txtRegisterPhoneNumber"
      android:layout_below="@+id/txtViewRegistrationSub"
      android:layout_marginTop="56dp"
      android:background="#ffffffff"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:visibility="visible"/>

    <Button
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Sign Up"
      android:id="@+id/btnRegister"
      android:layout_marginTop="41dp"
      android:textSize="20dp"
      android:clickable="true"
      android:elegantTextHeight="false"
      android:layout_below="@+id/txtRegisterPhoneNumber"
      android:layout_centerHorizontal="true"
      android:layout_alignParentEnd="false"
      android:layout_alignParentRight="false"/>

    <Button
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Back to Login"
      android:id="@+id/btnBackToLogin"
      android:textSize="20dp"
      android:clickable="true"
      android:elegantTextHeight="false"
      android:layout_below="@+id/btnRegister"
      android:layout_alignLeft="@+id/btnRegister"
      android:layout_alignStart="@+id/btnRegister"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Phone number is already registered"
      android:id="@+id/txtViewRegisterError"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:gravity="center"
      android:textColor="#ffa94442"
      android:visibility="gone"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/txtViewRegistrationSub"
      android:paddingTop="10dp"/>

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:inputType="text"
      android:ems="10"
      android:id="@+id/txtVerificationCode"
      android:background="#ffffffff"
      android:layout_alignTop="@+id/txtRegisterPhoneNumber"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignRight="@+id/txtRegisterPhoneNumber"
      android:layout_alignEnd="@+id/txtRegisterPhoneNumber"
      android:visibility="invisible"
      android:hint="Input verification code"/>

  </RelativeLayout>
</ViewFlipper>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/perChatContainer"
  android:padding="7dp">

  <LinearLayout
    android:id="@+id/perChatMessageContainer"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/per_chat_own"
    android:layout_height="wrap_content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Loading..."
      android:id="@+id/txtViewChatMateName"
      android:textStyle="bold"/>

    <LinearLayout
      android:orientation="vertical"
      android:id="@+id/perChatAttachmentContainer"
      android:visibility="gone"
      android:layout_width="200dp"
      android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="200dp"
      android:layout_marginBottom="10dp"
      android:padding="5dp"
      android:autoLink="all"
      android:textColor="@color/perChatContentOwn"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:id="@+id/txtViewPerChatContent"/>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:id="@+id/layoutMessageStatusContainer"
      android:padding="5dp"
      android:background="@drawable/per_chat_status"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtViewMateMessageTimestamp"
        android:layout_gravity="left"
        android:visibility="gone"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtViewOwnMessageTimestamp"
        android:visibility="gone"
        android:text="Testing"
        android:layout_marginTop="-18dp"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ..."
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txtViewMessageStatus"
        android:textSize="30dp"
        android:visibility="gone"
        android:layout_marginTop="-20dp"/>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>